{{! Main Title}}

        
        
<div class="container">
  <div class="row">
    <div class="col-md-12 wrapper-header">

      <div class="main-title">
        {{#if @blog.logo}}
        <img src="{{@blog.logo}}" style="width:50px;">
        {{/if}}
        <a href="{{@blog.url}}"><h1 class="page-title">{{@blog.title}}.</h1></a>
