      <div class="wrapper-featured-content">
        <h2> {{title}} </h2>
        <div class="wrapper-featured-author">{{#author}}by {{name}}{{/author}}</div>
    </div>
    <img src="{{image}}" title="{{title}}"></a>
    </div>
 

  </div>

  {{/has}}
  {{/foreach}}
</div>
